    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/Flip.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof gsap === 'undefined') { return; }
            gsap.registerPlugin(ScrollTrigger, Flip);

            // --- Pointer and Title Reveal Animations ---
            const pointer = document.querySelector('.custom-pointer');
            window.addEventListener('mousemove', (e) => {
                gsap.to(pointer, { x: e.clientX, y: e.clientY, duration: 0.2, ease: 'power1.out' });
            });
            const hero = document.querySelector('#hero');
            if (hero) {
                const titleContainer = hero.querySelector('.title-container');
                const headline = hero.querySelector('.headline-reveal');
                const logoMarquee = hero.querySelector('.logo-marquee-container');
                const testimonial = hero.querySelector('.testimonial-container');
                
                const tlOpen = gsap.timeline({
                    scrollTrigger: {
                        trigger: hero,
                        start: 'top top',
                        end: '+=1500',
                        scrub: 1,
                        pin: true
                    }
                });
                
                tlOpen.to(headline.querySelectorAll('span'), { 'clip-path': 'polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)', stagger: 0.05, ease: 'power2.out' }, 0);
                tlOpen.to(logoMarquee, { autoAlpha: 1, y: 0, duration: 0.5 }, 0.5);
                tlOpen.to(logoMarquee, { autoAlpha: 0, y: 50, duration: 0.5 }, 1.5);
                tlOpen.to(headline, { autoAlpha: 0, duration: 0.5 }, 1.7);
                tlOpen.to(testimonial, { autoAlpha: 1, duration: 0.5 }, 2);
            }

            // --- Robust Horizontal Scroll ---
            const horizontalSection = document.querySelector("#horizontal-scroll-section");
            const horizontalContainer = document.querySelector(".horizontal-container");
            if (horizontalSection && horizontalContainer) {
                const getScrollAmount = () => -(horizontalContainer.scrollWidth - window.innerWidth);
                
                const tween = gsap.to(horizontalContainer, {
                    x: getScrollAmount,
                    ease: "none",
                });

                ScrollTrigger.create({
                    trigger: horizontalSection,
                    pin: true,
                    scrub: 1,
                    start: "top top",
                    end: () => `+=${-getScrollAmount()}`,
                    animation: tween,
                    invalidateOnRefresh: true,
                });

                const panels = gsap.utils.toArray(".panel");
                panels.forEach(panel => {
                    const parallaxImage = panel.querySelector(".parallax");
                    if (parallaxImage) {
                        const speed = parallaxImage.dataset.speed || 0.5;
                        gsap.to(parallaxImage, {
                            x: () => (panel.offsetWidth - parallaxImage.offsetWidth) * speed * 0.5,
                            ease: "none",
                            scrollTrigger: {
                                trigger: panel,
                                containerAnimation: tween,
                                start: "left right",
                                end: "right left",
                                scrub: true,
                            }
                        });
                    }
                    const revealElements = panel.querySelectorAll("[data-reveal]");
                    if (revealElements.length > 0) {
                         gsap.from(revealElements, {
                            y: 50,
                            opacity: 0,
                            stagger: 0.1,
                            ease: "power2.out",
                            scrollTrigger: {
                                trigger: panel,
                                containerAnimation: tween,
                                start: "left 75%",
                                toggleActions: "play resume resume reverse",
                            }
                        });
                    }
                });
            }

            // --- CLICK-BASED FLIP ANIMATION ---
            const flipContainer = document.querySelector("#flip-container");
            if (flipContainer) {
                const grid = flipContainer.querySelector(".exploding-grid");
                const gridItems = flipContainer.querySelectorAll(".exploding-grid-item");
                const clickCue = flipContainer.querySelector(".click-cue");
                flipContainer.addEventListener('click', () => {
                    if (Flip.isFlipping(gridItems)) return;
                    const state = Flip.getState(gridItems);
                    grid.classList.toggle('is-exploded');
                    Flip.from(state, {
                        duration: 1.2,
                        ease: "elastic.out(1, 0.7)",
                        stagger: 0.05,
                        scale: true
                    });
                    gsap.to(clickCue, { 
                        opacity: grid.classList.contains('is-exploded') ? 0 : 1, 
                        duration: 0.5 
                    });
                });
            }

            // --- Bio Accordion Animation ---
            const bioItems = gsap.utils.toArray('.bio-accordion-item');
            if (bioItems.length > 0) {
                bioItems.forEach(item => {
                    item.addEventListener('click', () => {
                        const state = Flip.getState(bioItems);
                        const isOpen = item.classList.contains('is-open');
                        if (isOpen) {
                            item.classList.remove('is-open');
                        } else {
                            bioItems.forEach(i => i.classList.remove('is-open'));
                            item.classList.add('is-open');
                        }
                        Flip.from(state, {
                            duration: 0.8,
                            ease: "elastic.out(1, 0.75)",
                            onComplete: () => ScrollTrigger.refresh()
                        });
                    });
                });
            }
        });
    </script>
